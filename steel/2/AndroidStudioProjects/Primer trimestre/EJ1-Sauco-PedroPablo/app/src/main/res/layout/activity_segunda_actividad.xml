<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SegundaActividad">

    <TextView
        android:id="@+id/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_dark"
        android:text="@string/consultar_productos"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.04" />

    <TextView
        android:id="@+id/lblCodigo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lbl_codigo"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.22"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/producto"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@+id/lblCodigo"
        app:layout_constraintTop_toBottomOf="@+id/lblCodigo"
        tools:layout_editor_absoluteX="80dp"
        tools:layout_editor_absoluteY="90dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtProducto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/buscar"
        android:layout_width="59dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/ic_lupa"
        app:layout_constraintStart_toEndOf="@+id/producto"
        app:layout_constraintTop_toTopOf="@+id/producto" />

    <TextView
        android:id="@+id/nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@android:color/black"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="@+id/producto"
        app:layout_constraintTop_toBottomOf="@+id/producto" />

    <ImageView
        android:id="@+id/imagen"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="@id/nombre"
        app:layout_constraintTop_toBottomOf="@id/nombre"


        />

    <TextView
        android:id="@+id/url"
        android:layout_width="300dp"
        android:layout_height="17dp"
        android:layout_marginTop="16dp"
        android:autoLink="web"
        android:linksClickable="true"
        app:layout_constraintStart_toStartOf="@+id/imagen"
        app:layout_constraintTop_toBottomOf="@+id/imagen" />

    <!-- visibility pone el boton en invisible hasta que se pulsa en la lupa-->
</androidx.constraintlayout.widget.ConstraintLayout>