<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imagenHos"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:contentDescription="Imagen del hospital"
        android:layout_margin="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Iván Maeso Adrián"
        app:layout_constraintTop_toBottomOf="@id/imagenHos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="60dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/registro"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:icon="@drawable/ic_reg"
        app:layout_constraintStart_toStartOf="@id/imagenHos"
        app:layout_constraintTop_toBottomOf="@id/nombre"
        android:layout_marginStart="40dp"
        android:layout_marginTop="70dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/llamar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:icon="@drawable/ic_call"
        app:layout_constraintEnd_toEndOf="@id/imagenHos"
        app:layout_constraintTop_toBottomOf="@id/nombre"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="70dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>