<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintGeneral"
        android:layout_width="395dp"
        android:layout_height="308dp"
        android:background="@android:color/holo_green_light">

        <ImageView
            android:id="@+id/imgPhoto"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="8dp"
            android:layout_marginStart="4dp"
            android:contentDescription="@string/foto_monumento"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <!-- Texto para el nombre del monumento -->
        <TextView
            android:id="@+id/nombreMonumento"
            android:layout_width="280dp"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/imgPhoto"
            app:layout_constraintTop_toBottomOf="@+id/imgPhoto" />

        <!-- Texto para la ubicación del monumento -->
        <TextView
            android:id="@+id/ubicacionMonumento"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@+id/nombreMonumento"
            app:layout_constraintTop_toBottomOf="@+id/nombreMonumento" />

        <!-- Constraint que contiene los botones de email y llamar-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintSecundario"
            android:layout_width="90dp"
            android:layout_height="75dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="@id/constraintGeneral"
            app:layout_constraintTop_toBottomOf="@id/imgPhoto">

            <!-- Botón de email-->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEmail"
                android:layout_width="58dp"
                android:layout_height="40dp"
                android:layout_marginStart="17dp"
                app:icon="@drawable/ic_email"
                app:layout_constraintStart_toStartOf="@+id/constraintSecundario"
                app:layout_constraintTop_toTopOf="@+id/constraintSecundario" />

            <!-- Botón de llamar-->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLlamar"
                android:layout_width="58dp"
                android:layout_height="40dp"
                android:layout_marginStart="17dp"
                app:icon="@drawable/ic_call"
                app:layout_constraintStart_toStartOf="@+id/constraintSecundario"
                app:layout_constraintTop_toBottomOf="@+id/btnEmail" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>