<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint"
        android:layout_width="394dp"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_light">

        <TextView
            android:id="@+id/nombreCaso"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="13dp"
            android:textSize="22sp"
            android:textStyle="bold"
            android:fontFamily="@font/aclonica"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/lblNumeroCaso"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:text="@string/caso_n"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/aclonica"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="@id/nombreCaso"
            app:layout_constraintTop_toBottomOf="@id/nombreCaso" />

        <TextView
            android:id="@+id/numeroCaso"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="@font/aclonica"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/lblNumeroCaso"
            app:layout_constraintTop_toTopOf="@id/lblNumeroCaso" />

        <!-- TextView para insertar margen al final de los casos -->
        <TextView
            android:layout_width="150dp"
            android:layout_height="10dp"
            app:layout_constraintStart_toStartOf="@id/lblNumeroCaso"
            app:layout_constraintTop_toBottomOf="@id/lblNumeroCaso" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>