<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activitys.AddProductoListaActivity">

    <TextView
        android:id="@+id/tituloNuevoProducto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:fontFamily="@font/aclonica"
        android:text="A침adir producto a la lista"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Spinner
        android:id="@+id/spinnerProductos"
        style="@android:style/Widget.Material.Spinner.Underlined"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:layout_marginTop="80dp"
        android:layout_marginStart="40dp"
        app:layout_constraintStart_toStartOf="@+id/tituloNuevoProducto"
        app:layout_constraintTop_toBottomOf="@id/tituloNuevoProducto" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/cantidad"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="95dp"
        android:layout_height="67dp"
        android:hint="Ctd"
        android:layout_marginStart="285dp"
        android:layout_marginTop="70dp"
        app:endIconMode="clear_text"
        app:layout_constraintStart_toStartOf="@+id/tituloNuevoProducto"
        app:layout_constraintTop_toBottomOf="@id/tituloNuevoProducto">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtCantidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="2"
            android:fontFamily="@font/aclonica" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Bot칩n de a침adir -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAceptar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginTop="40dp"
        android:text="@string/aceptar"
        app:layout_constraintStart_toStartOf="@+id/spinnerProductos"
        app:layout_constraintTop_toBottomOf="@+id/cantidad" />

    <!-- Bot칩n de volver -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnVolver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_back"
        android:text="@string/volver"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerProductos" />

</androidx.constraintlayout.widget.ConstraintLayout>