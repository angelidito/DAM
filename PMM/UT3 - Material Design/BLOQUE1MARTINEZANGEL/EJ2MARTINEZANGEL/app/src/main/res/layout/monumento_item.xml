<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/monumento_item"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">


	<ImageView
		android:id="@+id/imagen_monumento"
		android:layout_width="100dp"
		android:layout_height="100dp"

		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toStartOf="@+id/denominacion_monumento"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"

		/>

	<TextView
		android:id="@+id/denominacion_monumento"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_margin="8dp"
		android:textAppearance="?attr/textAppearanceHeadline5"
		app:layout_constraintBottom_toBottomOf="@id/ubicacion_monumento"
		app:layout_constraintStart_toEndOf="@id/imagen_monumento"
		app:layout_constraintTop_toTopOf="parent"
		tools:text="Datos" />

	<TextView
		android:id="@+id/ubicacion_monumento"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_margin="8dp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toEndOf="@id/imagen_monumento"
		app:layout_constraintTop_toTopOf="@id/denominacion_monumento"
		tools:text="Calle de la Callería nº número piso puerta" />

	<Button
		android:id="@+id/email_btn"
		android:layout_width="wrap_content"
		android:layout_height="50dp"
		android:layout_margin="16dp"
		android:text="email"
		app:icon="@drawable/ic_email"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toStartOf="@id/callphone_btn"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/ubicacion_monumento" />

	<Button
		android:id="@+id/callphone_btn"
		android:layout_width="wrap_content"
		android:layout_height="50dp"
		android:layout_gravity="center"
		android:drawablePadding="15dp"
		android:text="LLamar"
		android:layout_margin="16dp"

		app:icon="@drawable/ic_call"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toEndOf="@id/email_btn"
		app:layout_constraintTop_toBottomOf="@id/ubicacion_monumento" />


</androidx.constraintlayout.widget.ConstraintLayout>