<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".activities.FaltasActivity">

	<Button
		android:id="@+id/btn_añadir"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_margin="16dp"

		android:layout_marginTop="60dp"
		android:text="Añadir"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/hora_til" />

	<TextView
		android:id="@+id/lbl_nombre"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Nombre del alumno:"
		app:layout_constraintBottom_toTopOf="@+id/nombreAlumno_til"
		app:layout_constraintStart_toStartOf="@+id/nombreAlumno_til" />

	<com.google.android.material.textfield.TextInputLayout
		android:id="@+id/nombreAlumno_til"
		android:layout_width="200dp"
		android:layout_height="wrap_content"
		android:layout_margin="16dp"
		app:layout_constraintBottom_toTopOf="@+id/lbl_fecha"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		>

		<com.google.android.material.textfield.TextInputEditText
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:hint="P.e.: Juan" />
	</com.google.android.material.textfield.TextInputLayout>


	<TextView
		android:id="@+id/lbl_fecha"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Fecha:"
		app:layout_constraintBottom_toTopOf="@+id/fecha_til"
		app:layout_constraintStart_toStartOf="@+id/fecha_til" />

	<com.google.android.material.textfield.TextInputLayout
		android:id="@+id/fecha_til"
		android:layout_width="200dp"
		android:layout_height="wrap_content"
		android:layout_marginTop="16dp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent">

		<com.google.android.material.textfield.TextInputEditText
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:hint="dd-mm-aaaa" />
	</com.google.android.material.textfield.TextInputLayout>

	<TextView
		android:id="@+id/lbl_hora"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Hora:"
		android:layout_marginTop="16dp"
app:layout_constraintTop_toBottomOf="@+id/fecha_til"
		app:layout_constraintBottom_toTopOf="@+id/hora_til"
		app:layout_constraintStart_toStartOf="@+id/hora_til"
		/>

	<com.google.android.material.textfield.TextInputLayout
		android:id="@+id/hora_til"
		android:layout_width="200dp"
		android:layout_height="wrap_content"
		app:layout_constraintTop_toBottomOf="@+id/lbl_hora"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		>

		<com.google.android.material.textfield.TextInputEditText
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:hint="1, 2, 3, 4, 5 o 6" />
	</com.google.android.material.textfield.TextInputLayout>




</androidx.constraintlayout.widget.ConstraintLayout>