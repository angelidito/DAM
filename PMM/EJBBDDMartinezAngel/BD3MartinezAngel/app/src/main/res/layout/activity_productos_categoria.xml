<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/NestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.ProductosCategoriaActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/ttl_titulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="categoria" />

            <AutoCompleteTextView
                android:id="@+id/autocomplete_producto"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ttl_titulo" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_buscar"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                app:icon="@drawable/ic_baseline_search_24"
                app:layout_constraintBottom_toBottomOf="@+id/autocomplete_producto"
                app:layout_constraintStart_toEndOf="@id/autocomplete_producto"
                app:layout_constraintTop_toTopOf="@+id/autocomplete_producto" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_lista_productos"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/autocomplete_producto"
                tools:listitem="@layout/item_producto" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_añadir_producto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp"
        android:contentDescription="@string/a_adir_producto"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btn_odenar_A_z"
        app:layout_constraintStart_toStartOf="@+id/btn_odenar_A_z"
        app:layout_constraintTop_toBottomOf="@+id/NestedScrollView"
        app:srcCompat="@android:drawable/ic_input_add" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_odenar_A_z"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:text="@string/a_z"
        app:layout_constraintBottom_toTopOf="@+id/btn_añadir_producto"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>