<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="@dimen/common_padding_min"
    android:layout_marginHorizontal="@dimen/common_padding_min">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cardview_shadow_start_color"
        android:padding="@dimen/common_padding_min">

        <TextView
            android:id="@+id/numeroCaso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceSubtitle2"
            android:maxLines="1"
            android:gravity="right"
            tools:text="AS%$34"
            android:ellipsize="end"
            android:padding="@dimen/common_padding_min"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/lblNumeroCaso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="right"
            android:maxLines="1"
            android:padding="@dimen/common_padding_min"
            android:text="NÂº caso:"
            android:textAppearance="?attr/textAppearanceSubtitle2"
            android:textColor="@color/black"
            app:layout_constraintEnd_toStartOf="@+id/numeroCaso"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/denominacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="denominacion"
            android:padding="@dimen/common_padding_min"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/numeroCaso"
            />




    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>